@model EXPRACU1_CondoriGutierrez.Models.ClsArrayLogin
@{
    Layout = null;
}

<!DOCTYPE html>

<html>
<head>
    <meta name="viewport" content="width=device-width" />
    <title>Index</title>
</head>
<body>
    <h1>Ingrese al sistema</h1>
    <div>
        @using (Html.BeginForm("Validar", "ArrayLogin", FormMethod.Post))
        {

            <label for="uname"><b>Usuario: </b></label>
            @Html.TextBoxFor(model => model.id)
            <label for="psw"><b>Contraseña: </b></label>
            @Html.TextBoxFor(model => model.contra)
            <br />
            <input type="submit" value="Ingresar" />

        }
    </div>
</body>
</html>
